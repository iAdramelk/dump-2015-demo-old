block('view-mode').content()(function () {
  var options = this.ctx.options;

  return [
    options.map(function (n) {
      return {
        elem: 'item',
        content: {
          elem: 'link',
          mix: n.current ? {block: 'is-current'} : false,
          current: n.current,
          url: n.href,
          content: n.text
        }
      };
    })
  ];
});
