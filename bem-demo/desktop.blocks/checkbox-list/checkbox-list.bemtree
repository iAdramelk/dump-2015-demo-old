block('checkbox-list').content()(function(){
    var items = this.ctx.items || [];

    return items.map(function(n) {
        return {
            elem: 'item',
            content: {
                elem: 'link',
                tag: 'a',
                mix: n.selected ? [ { block: 'is-selected' } ] : [],
                attrs: {
                    href: n.href,
                    checked: n.selected
                },
                content: n.text
            }
        };
    });
});
